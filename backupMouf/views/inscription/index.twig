<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 my-block my-center">
        <form id="inscriptionForm" class="form-horizontal" role="form" action="inscription/inscription" method="post">
            <fieldset>
                <h1 class="fantasy-text">Inscription Estimate</h1>
                <hr>
                <p><input id="login" name="login" type="text" placeholder="E-mail" class="form-control" autofocus required/></p>
