                <p><input id="confirm-password" type="password" placeholder="Confirmer le mot de passe" class="form-control" required></p>
                <p><button id="singlebutton" name="singlebutton" class="btn btn-success">S'inscrire</button></p>
                <a href="{{ constant("ROOT_URL") }}">Retour</a>
            </fieldset>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>
